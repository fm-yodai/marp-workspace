{
  "name": "marp-workspace",
  "version": "1.0.0",
  "description": "Multi-deck presentation workspace using Marp",
  "private": true,
  "workspaces": [
    "decks/*"
  ],
  "scripts": {
    "create-deck": "tsx scripts/create-deck.ts",
    "build:deck": "tsx scripts/build-deck.ts",
    "ocr:convert": "tsx scripts/ocr-convert-pptx.ts",
    "ocr:install": "pip3 install -r scripts/utils/ocr/requirements.txt",
    "ocr:verify": "bash scripts/verify-ocr-setup.sh",
    "clean": "rm -rf dist node_modules",
    "prepare": "node -e \"['dist/html','dist/pdf','dist/pptx','dist/pptx-editable'].forEach(d=>require('fs').mkdirSync(d,{recursive:true}))\""
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^4.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "inquirer": "^9.2.0",
    "@types/inquirer": "^9.0.0",
    "gray-matter": "^4.0.3",
    "commander": "^11.0.0",
    "ora": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
